Package teste;
Helpers
	digit = ['0'..'9'];
	digits = digit+;
	letter = ['a'..'z'] | ['A'..'Z'];	
	exp = ['e' + 'E'] ['+' + '-']? digits;
	newline = [10 + 13];
Tokens
	comment = '//' [[0..0xffff] - newline]* newline;
	space = ' ' | 9 | newline;
	
	while = 'while';
	if = 'if';
	else = 'else';
	type = 'int' | 'float' | 'boolean' | 'char' | 'string';
	end_command = ';';
	left_paren = '(';
	right_paren = ')';
	left_brac = '{';
	right_brac = '}';

	assign = '=';
	compare = '==' | '<' | '>' | '<=' | '>=';
	bol_op = '&' | '|' | '!';
	arith_op = '+' | '-' | '*' | '/' | '%';

	identifier = letter(letter | digit)*;
	int_num = digits;
	float_num = (digits '.'? digits? | '.' digits) exp?;

	misc = [0..0xffff];